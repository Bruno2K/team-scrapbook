DATABASE_URL="file:./dev.db"
PORT=3000
CORS_ORIGIN="http://localhost:8080"
JWT_SECRET=change-me-in-production

# Cloudflare R2 (optional; required for media uploads)
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=scrapbook
# R2_PUBLIC_BASE_URL=https://cdn.example.com

# Google Gemini API (optional; for AI-managed seed users in chat)
# Get key at https://aistudio.google.com/apikey
# GEMINI_API_KEY=
# Optional: model name (default gemini-2.0-flash). If 404, try gemini-1.5-pro or gemini-pro.
# GEMINI_MODEL=gemini-2.0-flash

# Steam Web API (optional; for Steam account linking)
# Get key at https://steamcommunity.com/dev/apikey
# STEAM_WEB_API_KEY=
# BACKEND_URL (optional; for Steam OpenID return URL, e.g. http://localhost:3000)
# BACKEND_URL=
